{
  "name": "company/equipment-repair-management",
  "description": "Hệ thống quản lý sửa chữa thiết bị",
  "version": "1.0.0",
  "type": "project",
  "keywords": ["equipment", "repair", "management", "php"],
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "phpmailer/phpmailer": "^6.8",
    "phpoffice/phpspreadsheet": "^1.28",
    "dompdf/dompdf": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "": "utils/"
    },
    "files": [
      "config/config.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"if (!file_exists('.env')) copy('.env.example', '.env');\""
    ],
    "post-update-cmd": [
      "php -r \"echo 'Dependencies updated successfully!\\n';\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "*": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
