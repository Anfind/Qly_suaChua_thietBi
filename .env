# Cấu hình môi trường - Copy và đổi tên thành .env

# Database
DB_HOST=localhost
DB_NAME=equipment_repair_management
DB_USER=root
DB_PASS=

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@company.com
FROM_NAME="Hệ thống quản lý sửa chữa thiết bị"

# Application
APP_NAME="Hệ thống quản lý sửa chữa thiết bị"
APP_VERSION=1.0.0
APP_DEBUG=true
# APP_URL=http://localhost:8080/Qly_suaChua_thietBi/
APP_URL=http://localhost/Qly_suaChua_thietBi/

# Security
SESSION_TIMEOUT=3600
CSRF_TOKEN_NAME=csrf_token

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Timezone
TIMEZONE=Asia/Ho_Chi_Minh
